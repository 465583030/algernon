[Unit]
Description=Algernon web server
Requires=redis.service
After=redis.service

[Service]
User=algernon
Group=algernon
ExecStart=/usr/bin/algernon -conf=/etc/algernon/server.lua -cert=/etc/algernon/cert.pem -key=/etc/algernon/key.pem /srv/http/algernon
CapabilityBoundingSet=
PrivateTmp=true
PrivateDevices=true
ProtectSystem=full
ProtectHome=true
NoNewPrivileges=true
RuntimeDirectory=algernon
RuntimeDirectoryMode=700

[Install]
WantedBy=multi-user.target
